{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'purpose_block',
    'padbot40',
    'region-' ~ region|clean_class,
  ]
%}

{% if content %}
  <div {{ attributes.addClass(classes) }} data-appear-top-offset="-200" data-animated="fadeInUp">
    <div class="container">
      <div class="row">
        {{ content }}
        <div class="col-lg-5 col-md-5 col-sm-5 ipad_img_in" data-appear-top-offset="-200" data-animated="fadeInRight">
          <img class="ipad_img1" src="/themes/custom/aa_theme/images/img1.png" alt="" />
        </div>
      </div>
    </div>
  </div>
{% endif %}
